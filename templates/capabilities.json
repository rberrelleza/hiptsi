
{
    "capabilities": {
        "hipchatApiConsumer": {
            "scopes": [
                "send_notification",
                "view_group"
            ]
        },

        "installable": {
            "allowGlobal": true,
            "allowRoom": true,
            "callbackUrl": "{{ base_url|safe }}/addon/installable"
        },
        "webhook": [
            {
                "event": "room_message",
                "pattern": "{{ pattern }}",
                "url": "{{ base_url|safe }}/addon/webhook"
            }
        ]
    },

    "key": "rb-hiptsi",
    "name": "Hiptsi",
    "description": "Hiptsi adds a slash command to get jitsi meetings started",
    "version": "1.0.0",
    "vendor": {
        "name": "Ramiro Berrelleza",
        "url": "https://github.com/rberrelleza/hiptsi"
    },
    "links": {
        "self": "{{base_url|safe}}/addon/capabilities",
        "homepage": "{{ base_url|safe }}"
    }
}
